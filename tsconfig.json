{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/nowhere-common": [
        "libs/nowhere-common/src"
      ],
      "@app/nowhere-common/*": [
        "libs/nowhere-common/src/*"
      ],
      "@app/proto": [
        "libs/proto/src"
      ],
      "@app/proto/*": [
        "libs/proto/src/*"
      ]
    }
  },
  "watchOptions": {
    "watchFile": "fixedPollingInterval"
  }
}