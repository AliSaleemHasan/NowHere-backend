{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend/src",
  "compilerOptions": {
    "assets": [
      {
        "include": "uploads/*",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true,
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "backend": {
      "type": "application",
      "root": "apps/backend",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true,
        "tsConfigPath": "apps/backend/tsconfig.app.json"
      }
    },
    "nowhere-common": {
      "type": "library",
      "root": "libs/nowhere-common",
      "entryFile": "index",
      "sourceRoot": "libs/nowhere-common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nowhere-common/tsconfig.lib.json"
      }
    },
    "storage": {
      "type": "application",
      "root": "apps/storage",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true,
        "tsConfigPath": "apps/storage/tsconfig.app.json"
      }
    }
  }
}